{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["airbnb-base", "plugin:jsx-a11y/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["jsx-a11y"],
  "rules": {
    "jsx-a11y/rule-name": 2,
    "semi": 0
  }
}
